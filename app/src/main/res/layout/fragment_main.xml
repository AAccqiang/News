<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_typemore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/type_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <com.example.news.view.HorizontalListView
            android:id="@+id/hl_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_typemore"
            />

    </RelativeLayout>

    <com.example.news.xListView.XListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.example.news.xListView.XListView>

</LinearLayout>
