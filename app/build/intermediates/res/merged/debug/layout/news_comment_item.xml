<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >

    <RelativeLayout
        android:id="@+id/rl_comment"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <ImageView
        android:id="@+id/iv_comment_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"
        />

    <TextView
        android:id="@+id/tv_comment_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zhangsan"
        android:layout_toRightOf="@id/iv_comment_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="#518de1"
        android:textStyle="bold"
        />

        <TextView
            android:id="@+id/tv_comment_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-12-05 00:52:34"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/rl_comment"
        android:text="哈哈哈"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        />


</RelativeLayout>